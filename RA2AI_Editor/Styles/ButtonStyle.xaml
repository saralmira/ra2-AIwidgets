        </Style.Resources>
        <Setter Property="Foreground" Value="#414141"/>
        <Setter Property="BorderBrush" Value="#BFBFBF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#EFEFEF"/>
