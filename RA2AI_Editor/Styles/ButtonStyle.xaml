    <ControlTemplate x:Key="SplitToggleStyle" TargetType="{x:Type ToggleButton}">
        <Border x:Name="bd" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" BorderThickness="1" 
                            BorderBrush="Transparent" Background="{TemplateBinding Background}" SnapsToDevicePixels="True"
                            CornerRadius="3">
            <Grid Margin="0 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Path x:Name="Arrow" Margin="0 0 0 0" Data="M 0 0 1 2 2 0 Z" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="None" Stroke="#2196F3" Fill="#2196F3"/>
                <ContentPresenter x:Name="ButtonContentPresenter" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="true">
                <Setter TargetName="bd" Property="Background" Value="#A9A9A9"/>
                <Setter TargetName="Arrow" Property="RenderTransform">
                    <Setter.Value>
                        <RotateTransform CenterX="1" CenterY="1" Angle="180"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Stroke" TargetName="Arrow" Value="#27C7F7"/>
                <Setter Property="Fill" TargetName="Arrow" Value="#BAE4FA"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="bd" Property="Background" Value="#DBDBDB"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

