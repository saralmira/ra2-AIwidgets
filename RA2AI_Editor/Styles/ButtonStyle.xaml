            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse x:Name="ButtonEllipse" Visibility="Hidden" VerticalAlignment="Center" HorizontalAlignment="Center" Width="16" Height="16" StrokeThickness="1" Fill="#EFEFEF" Stroke="#BFBFBF"/>
                        <Image Source="/Images/right.png" Width="14" Height="12" Visibility="{Binding State,Mode=OneWay,Converter={StaticResource BoolToVisible}}" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform"/>
                        <Image Source="/Images/left.png" Width="14" Height="12" Visibility="{Binding State,Mode=OneWay,Converter={StaticResource BoolToVisibleR}}" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonEllipse" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ButtonEllipse" Property="Stroke" Value="#A0A0A0"/>
                            <Setter TargetName="ButtonEllipse" Property="Fill" Value="#FBFBFB"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonEllipse" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ButtonEllipse" Property="Stroke" Value="#A0A0A0"/>
                            <Setter TargetName="ButtonEllipse" Property="Fill" Value="#D9D9D9"/>
                        </Trigger>
